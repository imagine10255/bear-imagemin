{
  "name": "bear-imagemin-api",
  "private": true,
  "version": "0.0.6-aplha.3",
  "description": "Common tools and methods for project development",
  "keywords": [
    "typescript",
    "express",
    "imagemin",
    "squash"
  ],
  "author": "imagine10255",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/bear-node-imagemin.git"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "engines": {
    "npm": ">=6",
    "node": ">=14.5.0"
  },
  "scripts": {
    "start": "nodemon",
    "build": "run-s build:claer && tsc --project ./tsconfig.build.json",
    "build:claer": "rm -rf ./dist",
    "prepublishOnly": "run-s build",
    "image:lossySquash": "bear-node-imagemin lossySquash --sourceFile=./example/source.png --saveFile=./example/lossySquash/image_1024.png --with=width",
    "test": "jest --coverage",
    "gitlog": "git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblueby %an %Cgreen(%cr)%Creset'",
    "lint:fix": "eslint ./lib/*.ts --fix"
  },
  "dependencies": {
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.3",
    "@types/method-override": "^0.0.32",
    "@types/node": "18.0.0",
    "apisauce": "^2.1.5",
    "bear-node-imagemin": "1.0.0",
    "express": "^4.18.1",
    "express-fileupload": "^1.4.0",
    "method-override": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "10.8.1",
    "typescript": "4.7.4"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^8.8.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "indent": [
        "warn",
        4
      ],
      "object-curly-spacing": [
        "warn",
        "never"
      ],
      "no-useless-escape": "off",
      "import/no-anonymous-default-export": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "no-mixed-operators": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  }
}
