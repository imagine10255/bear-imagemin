{
  "name": "bear-imagemin-client",
  "version": "0.0.7",
  "description": "imagemin + sharp Nodejs image processing tool",
  "keywords": [
    "typescript",
    "imagemin",
    "squash"
  ],
  "author": "imagine10255",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/bear-node-imagemin.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "npm": ">=6",
    "node": ">=14.5.0"
  },
  "scripts": {
    "build": "run-s build:claer && tsc --project ./tsconfig.build.json && run-s copy-dts",
    "copy-dts": "copyfiles -u 1 \"src/**/*.d.ts\" dist",
    "build:claer": "rm -rf ./dist",
    "prepublishOnly": "run-s build",
    "test": "jest",
    "lint:fix": "eslint ./src/*.ts --fix"
  },
  "dependencies": {
    "axios": "1.3.4"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.15",
    "@types/jest": "^29.5.0",
    "@types/node": "18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-eslint": "^10.0.3",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.2",
    "dockerode": "^3.3.5",
    "eslint": "^8.8.0",
    "form-data": "^4.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^29.0.5",
    "ts-node": "10.8.1",
    "typescript": "4.7.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "indent": [
        "warn",
        4
      ],
      "object-curly-spacing": [
        "warn",
        "never"
      ],
      "no-useless-escape": "off",
      "import/no-anonymous-default-export": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "no-mixed-operators": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  }
}
