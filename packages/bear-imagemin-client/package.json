{
  "name": "bear-imagemin-client",
  "version": "0.0.6",
  "description": "Common tools and methods for project development",
  "keywords": [
    "typescript",
    "imagemin",
    "squash"
  ],
  "author": "imagine10255",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/imagine10255/bear-node-imagemin.git"
  },
  "main": "dist/bear-imagemin-client.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "npm": ">=6",
    "node": ">=14.5.0"
  },
  "scripts": {
    "build": "run-s build:claer && microbundle --no-compress --no-css-modules --target node --format modern,cjs",
    "start": "run-s build:claer && microbundle watch --no-compress --no-css-modules --target node --format modern,cjs",
    "build:claer": "rm -rf ./dist",
    "prepublishOnly": "run-s build",
    "test": "jest --coverage",
    "gitlog": "git log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cblueby %an %Cgreen(%cr)%Creset'",
    "lint:fix": "eslint ./lib/*.ts --fix"
  },
  "dependencies": {
    "apisauce": "^2.1.5"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^8.8.0",
    "form-data": "^4.0.0",
    "jest": "^27.4.7",
    "microbundle": "^0.15.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^27.1.3",
    "ts-node": "10.8.1",
    "typescript": "4.7.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "rules": {
      "quotes": [
        "warn",
        "single"
      ],
      "semi": [
        "warn",
        "always"
      ],
      "indent": [
        "warn",
        4
      ],
      "object-curly-spacing": [
        "warn",
        "never"
      ],
      "no-useless-escape": "off",
      "import/no-anonymous-default-export": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "no-mixed-operators": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-var-requires": "off",
      "@typescript-eslint/no-empty-function": "off"
    }
  }
}
